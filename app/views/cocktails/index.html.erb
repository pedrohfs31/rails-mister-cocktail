<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <h1> Cocktails-Drinks </h1>
    <%= link_to "Adicionar Cocktail",new_cocktail_path, class:"btn btn-primary"    %>


</nav>

  <div class="d-flex justify-content-center">

    <div class="cards">
      <% @cocktails.each do |cocktail|  %>
        <div class="card" style="width: 18rem;">
          <img src="https://source.unsplash.com/random/1000x800/?<%=cocktail.name%>" class="card-img-top" alt="cocktail-image">
          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
            <p class="card-text">Ingredientes:
              <ul>
                <% cocktail.ingredients.each do |ingredient|  %>
                  <li>
                    <%= ingredient.name  %>
                  </li>
                <% end %>
              </ul>
            </p>
            <%= link_to "Deguste", cocktail_path(cocktail), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
