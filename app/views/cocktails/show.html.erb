<% if @cocktail.photo.attached? %>
          <% background_url = cl_image_path @cocktail.photo.key, crop: :fill %>
        <% else %>
          <% background_url = 'https://source.unsplash.com/random' %>
<% end %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">

  <div class="container">
    <h1 class = "display-2"> <%= @cocktail.name.capitalize  %></h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-6 mt-5">
        <% @cocktail.doses.each_with_index do |dose, index|  %>
          <h1> <%=index + 1%> - <%= dose.description %> de <%= dose.ingredient.name %> </h1>
        <% end %>
        <br>
        <%= link_to "Adicionar Doses ao Drink", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
        <br>
        <br>
        <%= link_to "Voltar aos Cocktails", cocktails_path, class: "btn btn-primary"  %>
      </div>
      <div class="col-6">
      </div>
    </div>
  </div>
</div>
